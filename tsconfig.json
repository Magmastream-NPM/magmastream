{
	"compilerOptions": {
		/* Basic Options */
		"target": "ES2022",
		"module": "NodeNext",
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"skipLibCheck": true,
		"importHelpers": true,

		/* Module Resolution Options */
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"resolveJsonModule": true,
	},
	"exclude": ["node_modules", "dist"]
}
